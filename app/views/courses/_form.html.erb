<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: course, url: course.persisted? ? course_path(course) : courses_path, method: course.persisted? ? :patch : :post, html: {class: "form"}) do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :video %>
          <%= form.file_field :video, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :pdf %>
          <%= form.file_field :pdf, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price, class: "form-control" %>
        </div>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="text-center">
          <%= form.submit course.persisted? ? "Update Course" : "Create Course", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
