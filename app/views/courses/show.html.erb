<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css">
</head>
<br><br><br><br><br>
<div class="container border rounded">
  <div class="row">
    <div class="col-md-3 text-center">
      <br>
      <h1><%= @course.title %></h1>
      <p><%= @course.description %></p>
      <br>
    </div>
    <div class="col-md-3">
      <br>
      <%= video_tag @course.video_url.to_s, controls: true, width: '100%', height: 'auto' %>
      <br>
    </div>
    <div class="col-md-3">
    </br>
      <%= image_tag @course.image_url.to_s, width: '100%', height: 'auto'%>
    </br>
    </div>
    <div class="col-md-3">
      <br>
      <%= link_to 'View PDF', @course.pdf_url.to_s, class: 'btn btn-primary btn-block' %>
      <br><br>
      <%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-success btn-block' %>
      <br><br>
      <%= button_to "Destroy", course_path(@course), method: :delete, class: 'btn btn-danger btn-block' %>
      <br>
    </div>
  </div>
</div>


