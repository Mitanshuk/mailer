<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css">
</head>

<div class="bg-image">
  <h1 class="text-center">Your Courses</h1>
  <% @courses.each do |course| %>
    <% unless course.user_id != current_user.id %>
      <div class="container border rounded">
        <div class="row">
          <div class="col-md-3 text-center">
            <br>
            <h1><%= course.title %></h1>
            <p><%= course.description %></p>
            <br>
          </div>
          <div class="col-md-3">
            <br>
            <% if course.video.attached? %>
              <%= video_tag url_for(course.video), controls: true,width: '100%', height: 'auto' %>
            <% else %>
              <p>No video attached.</p>
            <% end %>
            <br>
          </div>
          <div class="col-md-3">
          </br>
          <% if course.image.attached? %>
            <%= image_tag course.image, width: '100%', height: 'auto'%>
          <% else %>
            <p>No image attached.</p>
          <% end %>
          </br>
          </div>
          <div class="col-md-3">
            <br>
            <% if course.pdf.attached? %>
              <%= link_to 'View PDF', rails_blob_path(course.pdf), class: 'btn btn-primary btn-block'  %>
            <% else %>
              <p>No PDF attached.</p>
            <% end %>
            <br><br>
            <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-success btn-block' %>
            <br><br>
            <%= button_to "Destroy", course_path(course), method: :delete, class: 'btn btn-danger btn-block' %>
            <br>
          </div>
        </div>
      </div><br>
    <% end %>
  <% end %>
</div>
